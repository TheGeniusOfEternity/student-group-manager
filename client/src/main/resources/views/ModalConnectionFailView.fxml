<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="150.0" prefWidth="300.0" style="-fx-background-color: #4f518c; -fx-border-radius: 15px;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.controllers.ModalConnectionFailController"
            fx:id="modal"
>
    <Button fx:id="modalNoButton" layoutX="165.0" layoutY="95.0" minHeight="35.0" minWidth="110.0"
            mnemonicParsing="false" style="-fx-background-color: #dabfff;" text="Нет">
        <font>
          <Font name="Helvetica" size="16.0"/>
        </font>
    </Button>
    <Button fx:id="modalYesButton" layoutX="25.0" layoutY="95.0" minHeight="35.0" minWidth="110.0"
            mnemonicParsing="false" style="-fx-background-color: #dabfff;" text="Да">
        <font>
          <Font name="Helvetica" size="16.0"/>
        </font>
    </Button>
    <Text fx:id="modalText" fill="WHITE" layoutX="25.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0"
          text="Соединение с сервером разорвано. Повторить попытку?" wrappingWidth="250.0">
        <font>
          <Font size="16.0"/>
        </font>
    </Text>
</AnchorPane>
